### Run this on the VM to set up the local GitLab mirror
echo "deb http://mirror/ee xenial main" | sudo tee -a /etc/apt/sources.list && sudo curl -L "https://packages.gitlab.com/gitlab/gitlab-ee/gpgkey" 2> /dev/null | sudo apt-key add - &>/dev/null && sudo apt update && sudo apt install gitlab-ee && sudo gitlab-ctl reconfigure
